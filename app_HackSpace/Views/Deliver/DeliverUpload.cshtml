@model app_HackSpace.Models.ManageDeliver

@{
    ViewBag.Title = "DeliverUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.nameHack</h2>
<h4>Deliver Upload</h4>

<div>
    @Html.ActionLink("Back", "Deliver", new { id = ViewBag.hackathonId })
</div>

<div>
    @*@using (Html.BeginForm("DeliverUpload", "Deliver", FormMethod.Post, new { enctype = "multipart/form-data" }))*@
    @using (Html.BeginForm("DeliverUpload", "Deliver", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @ViewBag.Error

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.titleDeliver, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.titleDeliver, new { htmlAttributes = new { @class = "form-control" }, required = "" })
                    @Html.ValidationMessageFor(model => model.titleDeliver, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descDeliver, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.descDeliver, new { htmlAttributes = new { @class = "form-control" }, required = "" })
                    @Html.ValidationMessageFor(model => model.descDeliver, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    Logo :
                </div>
                <div class="col-md-10">
                    @*<input type="file" name="image" />*@
                    @Html.TextBox("image", "", new { type="file", required = "" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" value="upload" />*@
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>