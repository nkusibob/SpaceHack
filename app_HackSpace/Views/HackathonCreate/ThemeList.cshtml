@model List<app_HackSpace.Models.Theme>

@{
    ViewBag.Title = "ThemeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Step 2 : Theme</h2>

<p>@ViewBag.nameFacil</p>

@using (Html.BeginForm("ThemeList", "HackathonCreate", FormMethod.Post))
{
    for (var i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => model[i].idTheme)
        @Html.HiddenFor(model => model[i].nameTheme)

        <div>
            <div>
                @Html.DisplayFor(model => model[i].nameTheme)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].descTheme)
            </div>
            <div>
                @Html.CheckBoxFor(model => model[i].IsSelected, new { @class = "selected" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Previous" name="btnPrevious" />
            <input type="submit" class="btn btn-default" value="Next" onclick="return testcheck()" name="btnNext" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Add", "ThemeAdd", "HackathonAdd")
        </div>
    </div>
}

<script src="~/Scripts/checkbox/checkboxTest.js"></script>
<script src="~/Scripts/checkbox/checkboxSelected.js"></script>