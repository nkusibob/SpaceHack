@model List<app_HackSpace.Models.Expert>

@{
    ViewBag.Title = "Expert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Step 5 : Expert</h2>

<p>@ViewBag.namefacil</p>
<p>@ViewBag.nameTheme</p>
<p>@ViewBag.nameProg</p>
<p>@ViewBag.nameLoc</p>

@using (Html.BeginForm("ExpertList", "HackathonCreate", FormMethod.Post))
{
    for (var i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => model[i].idExpert)
        @Html.HiddenFor(model => model[i].C_Profile.lastname)
        @Html.HiddenFor(model => model[i].C_Profile.firstname)

        <div>
            <div>
                @Html.DisplayFor(model => model[i].C_Profile.lastname)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].C_Profile.firstname)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].expertise)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].availabilities)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].bio)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].hourly_rate)
            </div>
            <div>
                @Html.CheckBoxFor(model => model[i].IsSelected, new { @class = "selected" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Previous" name="btnPrevious" />
            <input type="submit" class="btn btn-default" value="Next" onclick="return testcheck()" name="btnNext" />
        </div>
    </div>
}

<script src="~/Scripts/checkbox/checkboxTest.js"></script>