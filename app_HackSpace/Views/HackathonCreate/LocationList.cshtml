@model List<app_HackSpace.Models.Location_>

@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Step 4 : Location</h2>

<p>@ViewBag.nameFacil</p>
<p>@ViewBag.nameTheme</p>
<p>@ViewBag.nameProg</p>

@using (Html.BeginForm("LocationList", "HackathonCreate", FormMethod.Post))
{
    for (var i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => model[i].idLoc)
        @Html.HiddenFor(model => model[i].nameLoc)

        <div>
            <div>
                @Html.DisplayFor(model => model[i].nameLoc)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].descLoc)
            </div>
            <div>
                @Html.CheckBoxFor(model => model[i].IsSelected, new { @class = "selected" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Previous" name="btnPrevious" />
            <input type="submit" class="btn btn-default" value="Next" onclick="return testcheck()" name="btnNext" />
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Add", "LocationAdd", "HackathonAdd")
            </div>
        </div>
}

<script src="~/Scripts/checkbox/checkboxTest.js"></script>
<script src="~/Scripts/checkbox/checkboxSelected.js"></script>