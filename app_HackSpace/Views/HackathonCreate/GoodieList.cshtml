@model List<app_HackSpace.Models.Goodie>

@{
    ViewBag.Title = "Goodie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Step 8 : Goodie</h2>

<p>@ViewBag.nameFacil</p>
<p>@ViewBag.nameTheme</p>
<p>@ViewBag.nameProg</p>
<p>@ViewBag.nameLoc</p>
<p>@ViewBag.nameExpert</p>
<p>@ViewBag.nameReward</p>
<p>@ViewBag.nameSponsor</p>

@using (Html.BeginForm("GoodieList", "HackathonCreate", FormMethod.Post))
{
    for (var i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(model => model[i].idGoodie)
        @Html.HiddenFor(model => model[i].nameGoodie)

        <div>
            <div>
                @Html.DisplayFor(model => model[i].nameGoodie)
            </div>
            <div>
                @Html.DisplayFor(model => model[i].descGoodie)
            </div>
            <div>
                @Html.CheckBoxFor(model => model[i].IsSelected, new { @class = "selected" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Previous" name="btnPrevious" />
            <input type="submit" class="btn btn-default" value="Next" onclick="return testcheck()" name="btnNext" />
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Add", "GoodieAdd", "HackathonAdd")
            </div>
        </div>
}

<script src="~/Scripts/checkbox/checkboxTest.js"></script>